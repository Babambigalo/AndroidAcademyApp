<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_CardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/just_waves"
            >

            <TextView
                android:id="@+id/item_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="2dp"
                android:layout_toEndOf="@+id/item_image"
                android:maxLines="1"
                android:padding="2dp"
                android:textSize="@dimen/textSize_item_category"
                android:textColor="@color/item_text_color"
                tools:text="DARWIN AWARD" />

            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_category"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="2dp"
                android:layout_toEndOf="@+id/item_image"
                android:maxLines="2"
                android:padding="2dp"
                android:textSize="@dimen/textSize_item_title"
                android:textStyle="bold"
                android:textColor="@color/item_text_color"
                tools:text="Tourist filmed sitting on 5m-long crocodile" />

            <TextView
                android:id="@+id/item_preview_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_title"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="2dp"
                android:layout_toEndOf="@+id/item_image"
                android:maxLines="3"
                android:padding="2dp"
                android:textSize="@dimen/textSize_item_previewText"
                android:textColor="@color/item_text_color"
                tools:text='"It was dangerous, i know. It is a scary feeling sitting on something that could kill you in a fraction of a second, he says."' />

            <TextView
                android:id="@+id/item_publish_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_preview_text"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="2dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/item_image"
                android:textSize="@dimen/data_textSize"
                tools:text="4 hr. ago, 10:34 AM" />

            <ImageView
                android:layout_width="@dimen/width_of_item_imageView"
                android:layout_height="@dimen/height_of_item_ImageView"
                android:id="@+id/item_image"
                android:scaleType="fitXY"
                tools:src="@drawable/tools_image"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_margin="8dp"
                android:contentDescription="@string/contentDescription_item_ImageView" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>